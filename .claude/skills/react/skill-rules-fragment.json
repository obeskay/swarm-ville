{
  "react": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "medium",
    "promptTriggers": {
      "keywords": [
        "react",
        "useState",
        "useEffect",
        "useCallback",
        "useMemo",
        "useRef",
        "React.lazy",
        "Suspense",
        "react component",
        "functional component"
      ],
      "intentPatterns": [
        "create.*(component|react.*component)",
        "add.*component",
        "use.*hook",
        "implement.*(useState|useEffect|useCallback|useMemo)",
        "add.*lazy.*loading",
        "create.*suspense.*boundary",
        "optimize.*component",
        "memoize.*component"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "**/*.tsx",
        "**/*.jsx",
        "**/components/**/*.ts",
        "**/features/**/*.tsx"
      ],
      "contentPatterns": [
        "import.*from ['\"]react['\"]",
        "useState<",
        "useEffect\\("
      ]
    }
  }
}
