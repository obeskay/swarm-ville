{
  "version": "1.0",
  "skills": {
    "skill-developer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Meta-skill for creating and managing Claude Code skills",
      "promptTriggers": {
        "keywords": [
          "skill system",
          "create skill",
          "add skill",
          "skill triggers",
          "skill rules",
          "hook system",
          "skill development",
          "skill-rules.json"
        ],
        "intentPatterns": [
          "(how do|how does|explain).*?skill",
          "(create|add|modify|build).*?skill",
          "skill.*?(work|trigger|activate|system)"
        ]
      }
    },
    "react": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "react",
          "useState",
          "useEffect",
          "useCallback",
          "useMemo",
          "useRef",
          "React.lazy",
          "Suspense",
          "react component",
          "functional component"
        ],
        "intentPatterns": [
          "create.*(component|react.*component)",
          "add.*component",
          "use.*hook",
          "implement.*(useState|useEffect|useCallback|useMemo)",
          "add.*lazy.*loading",
          "create.*suspense.*boundary",
          "optimize.*component",
          "memoize.*component"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/*.tsx",
          "**/*.jsx",
          "**/components/**/*.ts",
          "**/features/**/*.tsx"
        ],
        "contentPatterns": [
          "import.*from ['\"]react['\"]",
          "useState<",
          "useEffect\\("
        ]
      }
    },
    "tailwindcss": {
      "type": "domain",
